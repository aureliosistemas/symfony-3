{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <h3 class="col-md-12">Lancamentos  <a class="btn-novo btn btn-success btn-sm" href="{{ path('lancamento_new') }}">Novo</a></h3>
    </div>


    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Produto</th>
                <th>Valor</th>
                <th>Data</th>
                <th width="60px"></th>
            </tr>
        </thead>
        <tbody>
        {% for lancamento in lancamentos %}
            <tr>
                <td class="primary">{{ lancamento.id }}</td>
                <td>{{ lancamento.produto }}</td>
                <td>{{ lancamento.valor }}</td>
                <td class="datetime">{% if lancamento.data %}{{ lancamento.data|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <div class="btn-group" role="group">                            <a class="btn btn-primary" href="{{ path('lancamento_show', { 'id': lancamento.id }) }}">show</a>                            <a class="btn btn-primary" href="{{ path('lancamento_edit', { 'id': lancamento.id }) }}">edit</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
