{% extends 'base.html.twig' %}

{% block body %}
    <h1>Retirada - Excluir</h1>
    <hr/>
    {{ form_start(delete_form) }}
    <table class="table table-bordered table-responsive">
        <tbody>
        <tr>
                <th>Id</th>
                <td class="default">{{ retirada.id }}</td>
            </tr>
        <tr>
            <th>Descricao</th>
            <td class="default">{{ retirada.descricao }}</td>
        </tr><tr>
            <th>Profissional</th>
            <td class="default">{{ retirada.profissional }}</td>
        </tr>
        <tr>
                <th>Valor</th>
                <td class="default">{{ retirada.valor }}</td>
            </tr>
            <tr>
                <th>Data</th>
                <td class="datetime">{% if retirada.data %}{{ retirada.data|date('d/m/Y H:i') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
    <div>
        <a class="btn btn-primary btn-voltar" href="{{ path('caixa_show',{id: retirada.caixa.id}) }}">Voltar</a>
    </div>
    {{ form_end(delete_form) }}
{% endblock %}
